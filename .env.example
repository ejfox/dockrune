# dockrune Environment Configuration
# Copy this file to .env and update with your values

# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# Admin Dashboard
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password
JWT_SECRET=change-this-secret-key

# Deployment Configuration
DEPLOYMENT_DOMAIN=example.com
ACME_EMAIL=admin@example.com

# Alert Integrations (optional)
COACH_ARTIE_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/dockrune

# Database and Storage
DATABASE_PATH=/app/data/dockrune.db
REPOS_DIR=/app/repos
LOGS_DIR=/app/logs

# Port Configuration
WEBHOOK_PORT=8000
ADMIN_PORT=8001

# Environment
NODE_ENV=production
LOG_LEVEL=info